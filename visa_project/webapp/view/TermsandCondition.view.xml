<mvc:View controllerName="visaproject.controller.TermsandCondition"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true" height="100%"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page class="tcOverFlow sapUiContentPadding" showHeader="false">
        <content>
            <HBox alignItems="Center" justifyContent="Center">
                <VBox alignItems="Center" width="40%" justifyContent="Center">
                    <HBox >
                        <Image src="../images/VISA.png" width="35px" />
                        <Title class="addColor sapUiTinyMarginBegin" level="H2" text="{i18n>b2BIntegratedPayment}" />
                    </HBox>
                    <f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" class="sapUiMediumMargin tcclass">
                        <f:content>
                            <Title level="H3" text="{i18n>termsandconditions}" />
                            <TextArea id="idText1" rows="8" editable="false" class="borderClass sapUiContentPadding" value="{i18n>lorem}" />
                            <VBox class="borderClass sapUiTinyMarginTop">
                                <CheckBox id="idTcCheckBox" class="classTcCheckBox" text="{i18n>consenttotermsandcondition}" selected="{oModelControl>/consentToTC}"/>
                                <Label class="sapUiMediumMarginBegin tcFontSize" text="{i18n>ConsentLabelTermsandCondition}" />
                            </VBox>
                            <VBox class="borderClass sapUiTinyMarginTop">
                                <CheckBox id="idTcCheckBox1" class="classTcCheckBox" text="{i18n>consenttosharingdata}" selected="{oModelControl>/consentToSD}" />
                                <Label class="sapUiMediumMarginBegin tcFontSize" text="{i18n>ConsentLabelShareingData}" />
                            </VBox>
                            <HBox>
                                <Button text="Continue" type="Emphasized" class="sapUiSmallMarginTop" enabled="{= ${oModelControl>/consentToSD} &amp;&amp; ${oModelControl>/consentToTC}}" press="onConfirmTC" />
                            </HBox>
                        </f:content>
                    </f:SimpleForm>
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>


