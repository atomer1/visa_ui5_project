<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout">

    <Bar>
        <!-- Logo on the left side -->
        <contentLeft>
            <Image src="../images/VISA.png" width="35px" />
            <Text class="addColor " text="{i18n>b2BIntegratedPayment}" />
        </contentLeft>

        <!-- Buttons on the right side -->
        <contentRight>
            <OverflowToolbar >
                <Button text="{i18n>home}" press=".onClickNavigate('home')"></Button>
                <Button text="{i18n>suppliers}" press=".onClickNavigate('supplier')"></Button>
                <Button text="{i18n>paymentStatus}" press=".onClickNavigate('paymentStatus')"></Button>
                <Button icon="sap-icon://search" />
                <Button icon="sap-icon://bell" />
                <MenuButton icon="sap-icon://person-placeholder">
                    <menu>
                        <Menu>
                            <MenuItem text="Save" icon="sap-icon://save" press="onPress" />
                            <MenuItem text="Open" icon="sap-icon://open-folder" press="onPress" />
                        </Menu>
                    </menu>
                </MenuButton>
                <Button text="Login" visible="{= !${paymentStatusModel>/loginStatus}}" press="onClickLogin"/>
            </OverflowToolbar>
        </contentRight>
    </Bar>

</core:FragmentDefinition>