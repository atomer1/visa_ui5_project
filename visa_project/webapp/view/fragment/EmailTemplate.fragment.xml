<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  xmlns:c="sap.ui.commons">
  <Dialog id="emailDialog" contentWidth="500px" beginButton="{_oSendButton}" endButton="{_oCancelButton}" afterClose="onDialogClosed" showHeader="false">
    <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
      <f:content>
        <VBox >
          <Text class="addColor" text="{i18n>onBoardSuppliersStep2Of2}" />
          <Title class="addColor identifySize" text="{i18n>RequestForInformation}" level="H3"></Title>
          <Text text="{i18n>consentSentence}" />
          <Text text="{i18n>emailGenerator}" />
          <Link text="{i18n>viewMailingList}" />
          <Label text="Email Subject:" />
          <Input id="emailSubject" value="{i18n>emailSubject}" width="100%" />

          <Label text="Email Content:" />
          <FormattedText id="idEmailContent" htmlText="{i18n>emailContent}" />
          
          <HBox >
            <Button id="_oSendButton" text="Send" type="Emphasized" press=".onEmailSend" />
            <Button class="sapUiTinyMarginBegin" id="_oCancelButton" text="Cancel" type="Ghost" press=".onEmailCancel" />
          </HBox>
        </VBox>
      </f:content>
    </f:SimpleForm>

  </Dialog>
</core:FragmentDefinition>
